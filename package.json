{
  "name": "ProfPick",
  "version": "1.0.0",
  "private": true,
  "description": "ProfPick - Smarter course planning with in-context professor ratings",
  "scripts": {
    "frontend:start": "cd front-end && npm start",
    "frontend:build": "cd front-end && npm run build",
    "frontend:format": "cd front-end && npm run format",
    "backend:start": "cd back-end && npm start",
    "backend:format": "cd back-end && npm run format",
    "format": "npm run frontend:format && npm run backend:format",
    "install:all": "cd front-end && npm install && cd ../back-end && npm install",
    "test": "cd back-end && npm run test",
    "test:coverage": "cd back-end && npm run test:coverage",
    "start": "concurrently \"npm run frontend:start\" \"npm run backend:start\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "mongoose": "^9.0.0"
  }
}
